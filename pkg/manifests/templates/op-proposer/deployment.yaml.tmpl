apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ .Name }}-proposer
  namespace: {{ .Namespace }}
  labels:
    app.kubernetes.io/name: op-proposer
    app.kubernetes.io/instance: {{ .Name }}
    app.kubernetes.io/component: proposer
    app.kubernetes.io/part-of: opstack
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: op-proposer
      app.kubernetes.io/instance: {{ .Name }}
  template:
    metadata:
      labels:
        app.kubernetes.io/name: op-proposer
        app.kubernetes.io/instance: {{ .Name }}
        app.kubernetes.io/component: proposer
    spec:
      containers:
      - name: op-proposer
        image: {{ .Image }}
        imagePullPolicy: IfNotPresent
        env:
        - name: CHAIN_ID
          value: "{{ .ChainID }}"
        - name: L1_PRIVATE_KEY
          valueFrom:
            secretKeyRef:
              name: {{ .SignerPrivateKeySecret }}
              key: key
        command:
        - op-proposer
        args:
        - --poll-interval=12s
        - --rpc.port=8560
        - --rollup-rpc=http://{{ .Name }}-node:8547
        - --l2oo-address={{ .ContractAddresses.L2OutputOracle }}
        - --private-key=$(L1_PRIVATE_KEY)
        - --l1-eth-rpc={{ .L1RpcUrl }}
        volumeMounts:
        - name: rollup-config
          mountPath: /rollup
          readOnly: true
      volumes:
      - name: rollup-config
        secret:
          secretName: {{ .Name }}-rollup 